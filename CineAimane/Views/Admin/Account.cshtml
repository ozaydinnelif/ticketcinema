@model AdminAccountViewModel
@{
	ViewData["Title"] = "Account Settings";
}
<partial name="_AdminNavbarPartial" />
<div class="padding-top min-vh-100">
	<div class="container my-4">
		<div class="section-title d-flex align-items-center gap-4 mb-3" data-aos="fade-up">
			<h2 class="text-uppercase fw-bold flex-shrink-0 mb-0">@ViewData["Title"]</h2>
			<div class="line"></div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form method="post" autocomplete="off">
					@if (ViewBag.Errors != null)
					{
						<div class="alert alert-danger rounded-1 fw-medium mb-3" role="alert">
							@foreach (IdentityError error in ViewBag.Errors)
							{
								<p class="mb-0">@error.Description</p>
							}
						</div>
					}
					<div class="mb-3">
						<label asp-for="Username" class="form-label fw-semibold">Kullanıcı Adı</label>
						<div class="position-relative">
							<input type="text" asp-for="Username" class="form-control form-control-lg" disabled>
							<div class="form-control-icon">
								<i class='bx bx-user'></i>
							</div>
						</div>
						<span asp-validation-for="Username" class="text-danger d-block mt-2"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Email" class="form-label fw-semibold">Email adres</label>
						<div class="position-relative">
							<input type="email" asp-for="Email" class="form-control form-control-lg" disabled>
							<div class="form-control-icon">
								<i class='bx bx-envelope'></i>
							</div>
						</div>
						<span asp-validation-for="Email" class="text-danger d-block mt-2"></span>
					</div>
					<div class="mb-3">
						<label asp-for="CurrentPassword" class="form-label fw-semibold">Şifre <span class="text-danger">*</span></label>
						<div class="position-relative">
							<input type="password" asp-for="CurrentPassword" class="form-control form-control-lg" placeholder="Enter password here">
							<div class="form-control-icon">
								<i class='bx bx-lock-alt'></i>
							</div>
						</div>
						<span asp-validation-for="CurrentPassword" class="text-danger d-block mt-2"></span>
					</div>
					<div class="mb-3">
						<label asp-for="NewPassword" class="form-label fw-semibold">Yeni Şifre <span class="text-danger">*</span></label>
						<div class="position-relative">
							<input type="password" asp-for="NewPassword" class="form-control form-control-lg" placeholder="Enter new password here">
							<div class="form-control-icon">
								<i class='bx bx-lock-alt'></i>
							</div>
						</div>
						<span asp-validation-for="NewPassword" class="text-danger mt-2 d-block"></span>
					</div>
					<div class="mb-3">
						<label asp-for="ConfirmNewPassword" class="form-label fw-semibold">Yeni şifreyi onayla <span class="text-danger">*</span></label>
						<div class="position-relative">
							<input type="password" asp-for="ConfirmNewPassword" class="form-control form-control-lg" placeholder="Confirm new password here">
							<div class="form-control-icon">
								<i class='bx bx-lock-alt'></i>
							</div>
						</div>
						<span asp-validation-for="ConfirmNewPassword" class="text-danger mt-2 d-block"></span>
					</div>
					<div class="d-grid">
						<button type="submit" class="btn btn-lg btn-block btn-primary text-uppercase fw-semibold">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
@section Styles {
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
}
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<partial name="_ToastScriptsPartial" />
}